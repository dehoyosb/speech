{
    "seed" : 2017,
    "save_path" : "examples/common_voice/models/ctc_best",

    "data" : {
        "train_set" : "examples/common_voice/data/train.json",
        "dev_set" : "examples/common_voice/data/dev.json",
        "start_and_end" : false
    },

    "optimizer" : {
        "batch_size" : 24,
        "epochs" : 200,
        "learning_rate" : 1e-4,
        "momentum" : 0.0
    },

    "model" : {
        "class" : "CTC",
        "dropout" : 0.4,
        "encoder" : {
            "conv" : [
                [32, 5, 32, 2],
                [32, 5, 32, 1]
            ],
            "rnn" : {
                "dim" : 256,
                "bidirectional" : true,
                "layers" : 4
            }
        }
    }
}
